<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#082B33"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".ItemShow">

    <include
        layout="@layout/app_bar_back"
        android:id="@+id/app_bar_back"
        ></include>

    <ListView
        android:id="@+id/itemListview"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:divider="@color/colorDivider"
        android:listSelector="@color/pressed_color"
        android:choiceMode="singleChoice"
        android:dividerHeight="1dip" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_gravity="end"
        android:onClick="goToAddToCategory"
        app:srcCompat="@drawable/ic_pluss" />
</LinearLayout>